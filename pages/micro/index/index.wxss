@import "/template/share/share.wxss";

.page-wrap{
  min-height: 100%;
  background: #fff;
  position: relative;
}
.bg-color{
  height:448rpx ;
  background:linear-gradient(180deg,rgba(92,179,255,1),rgba(92,210,255,1));
  border-bottom-right-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}
.company-card{
  width:710rpx;
  height:384rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 10px 0px rgba(92,179,255,0.4);
  border-radius:8rpx;
  padding:50rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin:-260rpx auto 78rpx;
  position: relative;
}
.company-card .company-name{
  width:430rpx;
  height: 120rpx;
  font-size:42rpx;
  color:#333;
  margin-bottom: 70rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.company-card .company-address,.company-card .industry-scale{
  font-size:28rpx;
  color:rgba(102,102,102,1);
  margin-bottom: 12rpx;
}
.company-card .setting{  
  text-align: right;
  font-size:28rpx;
  color: rgba(102,102,102,1);
  margin-top:-10rpx;
}
.company-card .company-logo{
  position: absolute;
  top:50rpx;
  right:40rpx;
  width:130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
  border:1rpx solid rgba(242,246,252,1);
}
.company-card .company-logo image{
  width:100%;
  height: 100%;
  border-radius: 50%;
}
.company-card .no-info{
  width:375rpx;
  height:36rpx;
  background:rgba(242,246,252,0.65);
}
.company-card .industry-scale.no-info{
  width:227rpx;
}
.company-card .icon-edit{
  position: absolute;
  right:14rpx;
  bottom:42rpx;
  width:70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.company-card .icon-edit .img{
  width:30rpx;
  height: 30rpx;
}
.code-btns{
  margin-top:-10rpx;
  padding-bottom:30rpx; 
}
.code-btns .code-wrap{
    display: flex;
    flex-direction: column;
    align-items: center;
    /* margin-bottom: 76rpx; */
    margin-bottom: 55rpx;
}
.code-btns .code-wrap .img{
  width:300rpx;
  height: 300rpx;

}
.code-btns .btns {
    display: flex;
    justify-content: space-between;
    width:440rpx;
    margin:0 auto;
}
.code-btns .btns .btn-box{
  position: relative;
  width:200rpx;
  height: 80rpx;
}
.code-btns .btns .btn-box .img{
    width: 100%;
}
.code-btns .btns .btn-box .text{
  position: absolute;
  left:0rpx;
  top:0rpx;
  font-size:34rpx;
  color: #fff;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 100rpx;
  box-sizing: border-box;
}
.bubble-frame{
  position: fixed;
  bottom:16rpx;
  right:86rpx; 
  z-index: 1;
  width:312rpx;
}
.bubble{
    width:312rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #FE8B25;
    border:1rpx solid #FE8B25;
    position:relative;
    background-color:rgba(255,247,239,1);
}
.bubble::before,.bubble::after{
    content:"";
    display:block;
    border-width:12rpx;
    position:absolute; 
    z-index: 1;
    bottom:-23rpx;
    left:200rpx;
    border-style:solid dashed dashed;
    border-color:#FE8B25 transparent transparent;
    font-size:0;
    line-height:0;
}
.bubble::after{
    bottom:-21rpx;
    border-color:rgba(255,247,239,1) transparent transparent;
}
.bubble.andBubbleDesk::before{
  bottom: -22rpx;
}
.bubble.andBubbleDesk::after{
  bottom: -20rpx;
}
.firstCanvas{
  position: absolute;
  top: -100%;
  left: -1000%;   
}  
 .start-wrap .img-box{
  position: absolute;
  bottom:65rpx;
  left:20rpx;
  z-index: 1;
  width:710rpx;
  height: 182rpx;
}
.start-wrap .img-box .img{
  width:100%;
  height: 100%;
 } 
 .start-wrap .save-btn{
   width:670rpx;
   background-color:#5CB3FF!important;
 }
.bubble-desktop{
  position: fixed;
  top:4rpx;
  right:94rpx;
  z-index: 1;
  width:500rpx;
  opacity:0;
  animation: transitionOpacity 5s;
}

@keyframes transitionOpacity{
  0% { opacity: 0;}
  20% { opacity: 1;}
  80% { opacity: 1;}
  100% { opacity: 0;}
}
@-webkit-keyframes transitionOpacity{
  0% { opacity: 0;}
  20% { opacity: 1;}
  80% { opacity: 1;}
  100% { opacity: 0;}
}
.create-postion-tip{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:28rpx;
  color: #666666;
  margin-top:50rpx;
  padding:30rpx 35rpx;
  /* background: rgba(92,179,255,0.1); */
  background: rgba(250,251,252,1);
}
.create-postion-tip .fa{
  color: rgba(92,179,255,0.5);
  font-size:80rpx;
  margin-right: 14rpx;
}
