page{
  height: -webkit-calc(100% - 64px);
  height: calc(100% - 64px);
}
.scroll-view{
  padding-bottom: 0;
  box-sizing: border-box;
  background-color: #fff;
  margin-top:64px;
}
.record-item{
  display: flex;
  align-items: center;
  padding:30rpx;
}
.record-item:first-child{
  margin-top:30rpx;
}
.record-item .record-hd{
  width:96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.record-item .record-hd image{
  width:100%;
  height: 100%;
  border-radius: 50%;
}
.record-item .record-bd{
  flex:1;
}
.record-item .record-bd .top{
  display: flex;
  justify-content: space-between;
  line-height: 32rpx;
  margin-bottom: 8rpx;
}
.record-item .record-bd .money{
  color: #DBB272;
  font-size: 32rpx;
  font-weight: 550;
}
.loading{
  text-align: center;
  font-size:28rpx;
  color: #999;
  line-height: 30rpx;
}
.loading .fa{
  font-size:28rpx;
  margin-right: 10rpx;
}
.scroll-view.true{
  background-color: #f8f8fc;
}
.no-data{
  padding-top:200rpx;
  font-size: 28rpx;
  color: #B2B2B2;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data image{
  width:140rpx;
  margin-bottom: 60rpx;
}