.banner-box{
  width: 100%;
  height: 284rpx;
  overflow: hidden;
}
.banner-box .img{
  width: 100%;
}
.scroll-view{
  /* padding:30rpx; */
  padding-bottom: 0;
  box-sizing: border-box;
  background-color: #fff;
}
.record-list{
  padding:30rpx;
}
.record-item{
  display: flex;
  align-items: center;
  padding-top:30rpx;
  padding-bottom: 30rpx;
}
.record-item:last-child{
  padding-bottom: 0rpx;
}
.record-item .record-hd{
  width:96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #5CB3FF;
  margin-right: 24rpx;
}
.record-item .record-hd image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.record-item .record-bd{
  flex:1;
}
.record-item .record-bd .top{
  display: flex;
  justify-content: space-between;
  line-height: 32rpx;
  margin-bottom: 8rpx;
}
.record-item .record-bd .bottom text{
  margin-left:30rpx;
}
.loading{
  text-align: center;
  font-size:28rpx;
  color: #999;
  line-height: 30rpx;
}
.loading .fa{
  font-size:28rpx;
  margin-right: 10rpx;
}
.no-data{
  padding-top:200rpx;
  font-size: 28rpx;
  color: #B2B2B2;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data image{
  width:140rpx;
  margin-bottom: 60rpx;
}