.banner-box {
  width: 100%;
  height: 418rpx;
  overflow: hidden;
  position: relative;
}

.banner-box .img {
  width: 100%;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

/* 输入框 */

.banner-box .weui-search-bar {
  position: absolute;
  bottom: 92rpx;
  left: 83rpx;
  width: 584rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  padding: 0;
  border-width: 0;
  overflow: hidden;
  opacity: 0.8;
}

.weui-search-bar__form {
  width: 584rpx;
  height: 80rpx;
  border-radius: 0;
  border: none;
}

.weui-search-bar__label {
  line-height: 80rpx;
}

.weui-search-bar__label .weui-icon-search {
  vertical-align: top;
}

.weui-search-bar__label .weui-search-bar__text {
  position: relative;
  top: -2rpx;
}

.weui-search-bar__box {
  height: inherit;
  line-height: inherit;
}

.weui-icon-search_in-box {
  top: 27rpx;
}

.weui-search-bar__input {
  height: inherit;
  line-height: inherit;
  width:300rpx;
}

.weui-icon-clear {
  line-height: 80rpx;
  padding:14rpx 26rpx;

}

.weui-search-bar__cancel-btn {
  font-size: 28rpx;
  line-height: 80rpx;
  margin-left: 0rpx;
  padding-left: 15rpx;
  margin-right: 15rpx;
  position: relative;
}

.weui-search-bar__cancel-btn::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 20rpx;
  bottom: 20rpx;
  width: 1rpx;
  border-left: 2rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

/*  列表 */

.page-square {
  min-height: 100%;
  background: #fff;
}

.person-list {
  padding: 40rpx 30rpx;
  background: #fff;
}

.person-item {
  width: 688rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  box-shadow:0rpx 1rpx 8rpx 0rpx rgba(214,225,235,1);
  border-radius: 8rpx;
  display: flex;
}

.person-item .img-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  border:1rpx solid #EBEEF5;
}

.person-item .img-box .img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.person-item .person-info {
  flex: 1;
}

.person-item .person-info .nick-name {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
}

.person-item .person-info .nick-name .img {
  width: 28rpx;
  height: 24rpx;
  margin-right: 16rpx;
}

.person-item .person-info .position-name {
  display: inline-flex;
  padding: 0 10rpx;
  font-size: 22rpx;
  line-height: 1.5;
  color: #666;
  border-radius: 5rpx;
  margin-bottom: 26rpx;
  background: rgba(235, 238, 245, 1);
}

.person-item .person-follow {
  width: 40rpx;
  padding-left:100rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.person-item .person-follow .img {
  width: 100%;
}

/* 没人脉或没购买 */

.no-data {
  padding-top: 200rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-data image {
  width: 140rpx;
  margin-bottom: 60rpx;
}
