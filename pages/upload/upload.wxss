.cropper {
    position: absolute;
    top: 70px;
    left: 0;
    bottom:50px;
}

.cropper-wrapper {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    background-color:  rgba(0, 0, 0, 0.95);
}

.cropper-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 50px;
    line-height: 50px;
    background-color: rgba(0, 0, 0, 0.95);
    color: #5CB3FF;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage {
    width: 50%;
    text-align: center;
}
